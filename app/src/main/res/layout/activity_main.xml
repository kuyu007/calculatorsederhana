<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_halaman"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/biru"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angka 1"
        android:textSize="20dp"
        android:textColor="#1C1C1D"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/angka1"
        android:inputType="numberDecimal"
        android:hint="inputan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angka 2"
        android:textSize="20dp"
        android:textColor="#1C1C1D"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/angka2"
        android:inputType="numberDecimal"
        android:hint="inputan"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_weight="1"
        android:textSize="30sp"
        android:onClick="btntambah"
        android:layout_marginStart="10dp"
        android:background="@color/merah"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_weight="1"
        android:textSize="30dp"
        android:onClick="btnkurang"
        android:layout_marginStart="10dp"
        android:background="@color/kuning"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_weight="1"
        android:textSize="30dp"
        android:onClick="btnbagi"
        android:layout_marginStart="10dp"
        android:background="@color/hijau"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_weight="1"
        android:textSize="30dp"
        android:onClick="btnkali"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/biru" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhasil"
        android:gravity="center"
        android:text="0"
        android:textSize="100dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="tombolreset"
        android:src="@drawable/download"/>

</LinearLayout>